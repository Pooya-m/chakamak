<%- model_class = Poem -%>
<div class="page-header">
  <h1><%=t '.title'%></h1>
</div>
<table class="table table-striped poems">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:poet_name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @poems.each do |poem| %>
      <tr>
        <td><h2><%= poem.content %></h2></td>
        <td><%= poem.poet_name %></td>
        <% if user_signed_in? %>
            <% if Vote.exists?(poem_id: poem.id, user_id: current_user.id) %>
                <td> <%= link_to t('.unvote_html') , unvote_path(poem.id), method: :post , title: t('.unvote') , rel: "tooltip" , class: "btn btn-danger"  %> </td>
            <% else %>
                <td> <%= link_to t('.upvote_html'), upvote_path(poem.id), method: :post, class: "btn btn-success" , title: t('.upvote') , rel: "tooltip"%> </td>
            <% end %>
        <% else %>
        <% end %>
        <% if user_signed_in? and poem.user_id == current_user.id %>
            <td><%= link_to t(:delete), poem_path(poem), method: :delete, class: "btn btn-danger" %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_poem_path,
            :class => 'btn btn-primary' %>
