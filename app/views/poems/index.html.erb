<%- model_class = Poem -%>
<div class="page-header">
  <div class="poems_index_title" align="center" > <h1><%=t '.title'%></h1> </div>
</div>
<table class="table table-striped poems">
  <tbody>
    <% @poems.each do |poem| %>
      <tr>
        <td><h4 class="header2"><%= poem.content %></h2><p class="header3"><%= poem.poet_name %>
        <% if user_signed_in? %>
            <% if Vote.exists?(poem_id: poem.id, user_id: current_user.id) %>
                <%= link_to t('.unvote_html') , unvote_path(poem.id), method: :post , title: t('.unvote') , rel: "tooltip" , class: "btn btn-danger"  %>
            <% else %>
                <%= link_to t('.upvote_html'), upvote_path(poem.id), method: :post, class: "btn btn-success" , title: t('.upvote') , rel: "tooltip"%>
            <% end %>
        <% else %>
        <% end %>
        <% if user_signed_in? and poem.user_id == current_user.id %>
            <%= link_to t(:delete), poem_path(poem), method: :delete, class: "btn btn-danger" %>
        <% end %>
        </p></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br> <br>
<% if user_signed_in? %>
<div class="new_in_index">
<%= simple_form_for Poem.new, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :content %>
  <%= f.input :poet_name %>
  <div class="form-actions action_new_in_index">
  <%= f.button :submit, :class => 'btn-primary' , value: t('.poem_new') %>
  </div>
</div>
      <% end %>
<% end %>
