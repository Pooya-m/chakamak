<br> <br> <Br>
<div class="profile-show-poems">
  <h1><%= t('.titl2') %> </h1>
</div>
<p>
<div>
  <div class="m1 inline">
    <% @poems.each do |p| %>
        <%= p.content.split(/ {2,}/)[0] %>
        <br>
    <% end %>
  </div>
  <div class="m2 inline">
    <% @poems.each do |p| %>
        <%= p.content.split(/ {2,}/)[1] %>
        <br>
    <% end %>
  </div>
  <div class="m3 inline inline-icon">
    <% @poems.each do |p| %>
        <small><%= p.poet_name %> </small>
        <br>
    <% end %>
  </div>

  <div class="m4 inline inline-icon">
    <% @poems.each do |p| %>
        <small>
          <%= link_to t(:show_html), p, title: t(:show_poem) %>
        </small>
        <% if user_signed_in? %>
            <small>
              <% if Vote.exists?(poem_id: p.id, user_id: current_user.id) %>
                  <%= link_to t(:minus_html), unvote_path(p.id), method: :post, title: t(:minus) %>
              <% else %>
                  <%= link_to t(:plus_html), upvote_path(p.id), method: :post, title: t(:plus) %>
              <% end %>
            </small>
            <small>
              <% if p.user_id == current_user.id %>
                  <%= link_to t(:delete_html), poem_path(p), method: :delete, title: t(:delete_poem) %>
              <% end %>
            </small>

          <% end %>

        <br>
    <% end %>
  </div>
</div>

<br> <br>   <br> <br>
<% if user_signed_in? %>
    <div class="new_in_index">
      <%= simple_form_for Poem.new, :html => {:class => 'form-horizontal special-form'} do |f| %>
          <%= f.input :content %>
          <%= f.input :poet_name %>
          <div class="form-actions action_new_in_index">
            <%= f.button :submit, :class => 'btn-primary', value: t('.poem_new') %>
          </div>
          </div>
      <% end %>
<% end %>
