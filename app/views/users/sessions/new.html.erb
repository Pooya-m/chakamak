<% title t(:sign_in) %>
<body class="signup">


<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name) , :html => { :class => 'my_form2' }) do |f| %>

    <div class="form-inputs"
    <%= f.input :email, :autofocus => true %>
    <%= f.input :password %>
    <% if devise_mapping.rememberable? -%>
        <%= f.input :remember_me, as: :boolean, label: t(:remember_me) %>
    <% end %>
    </div>

    <div class="my_action">
      <%= f.submit t(:sign_in), class: "btn btn-primary" %>
      <%= link_to t(:forgot), new_user_password_path , class: "salam"%>

    </div>
<% end %>
</body>






